<div class="row">
    <div class="col-md-12 tablePosts text-center">
        <h2>Posts</h2>
        <hr>
        <table class="table table-hover text-center text-dark">
            <tr>
                <th>Post ID</th>
                <th>Title</th>
                <th>Post Date</th>
                <th>Category</th>
                <th>Published</th>
            </tr>
            {{#each posts}}
            <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{postDate}}</td>
                <td>{{category}}</td>
                <td>{{published}}</td>
            </tr>
            {{/each}}
        </table>
    </div>
    <div class="col-md-12 text-center">
        {{#unless posts}}
            <strong>{{message}}</strong>
        {{/unless}}
    </div>
</div>