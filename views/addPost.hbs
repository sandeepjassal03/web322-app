<h1>Add Post</h1>
<form class="form" action="/posts/add" method="POST" enctype="multipart/form-data">
    <h3>Feature Image</h3>
    <hr>
    <table>
        <tr>
            <td><input class="form-control" id="photo" type="file" name="featureImage" /><br /></td>
        </tr>
    </table>
    <h3>Post Content</h3>
    <hr>
    <table cellpadding="5" cellspacing="5">
        <tr class="form-group">
            <td><label class="form-label" for="title">Title</label></td>
            <td><input class="form-control" id="title" type="text" name="title" /><br /></td>
        </tr>
        <tr class="form-group">
            <td><label class="form-label" for="body">Body</label></td>
            <td><textarea class="form-control" id="body" type="text" name="body"></textarea><br /></td>
        </tr>
        <tr class="form-group">
            <td><label class="form-label" for="body">Category</label></td>
            <td>
                {{#if categories}}
                <select name="category" class="form-select" id="dropdown" aria-label="Default select example">
                    <option selected value="null">Select category</option>
                    {{#each categories}}
                    <option value="{{id}}">{{category}}</option>
                    {{/each}}
                </select>
                {{else}}
                <a href="/categories/add" class="btn btn-outline-success mx-2">Add Categories</a>
                {{/if}}
            </td>
        </tr>
        <tr class="form-group">
            <td>
                <label class="form-label">Visibility</label>
            </td>
            <td>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="true" id="flexCheckChecked" name="published">
                    <label class="form-check-label" for="flexCheckChecked">
                        Published
                    </label>
                </div>
            </td>
        </tr>
    </table>
    <button class="btn btn-outline-danger float-end" type="submit" value="submit">Add Post</button>

</form>